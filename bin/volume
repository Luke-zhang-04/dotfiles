#!/bin/sh

# sinkId="$(pacmd list-sinks | grep -E "index: [0-9]+" | grep -o -E "[0-9]+" -m 1)"
sinkId="$(pactl info | sed -En 's/Default Sink: (.*)/\1/p')"

if [ "$1" = "up" ]; then
    pactl set-sink-mute "$sinkId" 0
    pactl -- set-sink-volume "$sinkId" +5%
elif [ "$1" = "down" ]; then
    pactl set-sink-mute "$sinkId" 0
    pactl -- set-sink-volume "$sinkId" -5%
elif [ "$1" = "mute" ]; then
    pactl set-sink-mute "$sinkId" 1
elif [ "$1" = "unmute" ]; then
    pactl set-sink-mute "$sinkId" 0
elif [ "$1" = "toggleMute" ]; then
    pactl set-sink-mute "$sinkId" toggle
elif [ "$(echo "$1" | grep -E "^[+-]?[0-9]+%\$")" ]; then
    pactl set-sink-mute "$sinkId" 0
    pactl -- set-sink-volume "$sinkId" "$1"
else
    echo "Invalid argument: must be up, down, mute, unmute, toggleMute, or a percentage"
fi

