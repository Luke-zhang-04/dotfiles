#!/bin/bash

# Turns on or off dunst notifs

cmd="/usr/bin/dunstctl"

if [[ "$1" == "on" ]]; then
    notify-send "Notifs" "Do Not Disturb is On"
    "$cmd" set-paused true
    echo "DND is on"
elif [[ "$1" == "off" ]]; then
    notify-send "Notifs" "Do Not Disturb is Off"
    "$cmd" set-paused false
    echo "DND is off"
else
    if [[ "$($cmd is-paused)" == "true" ]]; then
        notify-send "Notifs" "Do Not Disturb is off"
        echo "DND is off"
    else
        notify-send "Notifs" "Do Not Disturb is on"
        echo "DND is on"
    fi

    /usr/bin/dunstctl set-paused toggle
fi
