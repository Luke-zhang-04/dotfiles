#! /bin/bash
# Fetch files and ln

mkdir -pv ./.config/i3
mkdir -pv ./.config/dunst
mkdir -pv ./.config/redshift
mkdir -pv ./.config/fish
mkdir -pv ./.config/fish/functions
mkdir -pv ./.config/fish/conf.d
mkdir -pv ./.config/omf
mkdir -pv ./.devilspie
mkdir -pv ./conky

ln -v ~/.Xresources ./.Xresources || true
ln -v ~/.config/i3/* ./.config/i3 || true

ln -v ~/.config/fish/config.fish ./.config/fish/config.fish || true
ln -v ~/.config/fish/fish_variables ./.config/fish/fish_variables || true
ln -v ~/.config/fish/functions/* ./.config/fish/functions/ || true
ln -v ~/.config/fish/conf.d/* ./.config/fish/conf.d/ || true

ln -v ~/.config/omf/* ./.config/omf/ || true
ln -v /usr/share/conky/* ./conky/ || true
ln -v ~/.gitconfig ./.gitconfig || true
ln -v ~/.bashrc ./.bashrc || true
ln -v ~/.ombrc ./.ombrc || true
ln -v ~/.xinitrc ./.xinitrc || true
ln -v ~/.Xmodmap ./.Xmodmap || true
ln -v ~/.zshrc ./.zshrc || true
ln -v ~/.config/picom.conf ./.config/picom.conf || true
ln -v ~/.config/dunst/dunstrc ./.config/dunst/dunstrc || true
ln -v ~/.config/redshift/redshift.conf ./.config/redshift/redshift.conf || true
